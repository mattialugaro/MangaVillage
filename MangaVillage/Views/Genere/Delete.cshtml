@model MangaVillage.Genere

@{
    ViewBag.Title = "Delete";
}
@Html.Partial("_Notification")

<div class="my-5 fst-italic">
    <h2>Elimina Genere</h2>
    <h3>Sei sicuro di volere eliminare questo genere?</h3>
</div>
<div>
    <dl class="dl-horizontal">
        <dt>
            @Html.DisplayNameFor(model => model.Nome)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Nome)
        </dd>

    </dl>

    @using (Html.BeginForm())
    {
        @Html.AntiForgeryToken()

        <div class="form-actions no-color mt-5">
            <input type="submit" value="Elimina" class="btn btn-danger me-2 fst-italic" />
            <a class="btn btn-wg fst-italic" href="@Url.Action("Index")">Lista Generi</a>
        </div>
    }
</div>
