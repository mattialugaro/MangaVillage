@model IEnumerable<MangaVillage.Genere>

@{
    ViewBag.Title = "Index";
}
@Html.Partial("_Notification")

<div class="d-flex justify-content-between align-items-center my-5 w-50 mx-auto fst-italic">
    <h2 class="mb-0">Generi</h2>
    <a href="@Url.Action("Create")" class="btn btn-success">Aggiungi</a>
</div>

<table class="table table-striped w-50 mx-auto text-center middle">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Nome)
        </th>
        <th></th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Nome)
            </td>
            <td>
                @Html.ActionLink("Modifca", "Edit", new { id = item.ID }, new { @class = "btn btn-warning me-3 fst-italic" })
                @Html.ActionLink("Elimina", "Delete", new { id = item.ID }, new { @class = "btn btn-danger fst-italic" })
            </td>
        </tr>
    }

</table>
