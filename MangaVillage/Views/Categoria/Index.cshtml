@model IEnumerable<MangaVillage.Categoria>

@{
    ViewBag.Title = "Index";
}
@Html.Partial("_Notification")


<div class="d-flex justify-content-between align-items-center my-4 w-50 mx-auto">
    <h2 class="mb-0">Categorie</h2>
    <a href="@Url.Action("Create")" class="btn btn-success">Aggiungi</a>
</div>

<table class="table table-striped text-center middle w-50 mx-auto">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Nome)
        </th>
        <th></th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Nome)
            </td>
            <td>
                @Html.ActionLink("Modifica", "Edit", new { id = item.ID }, new { @class = "btn btn-warning me-3" })
                @Html.ActionLink("Elimina", "Delete", new { id = item.ID }, new { @class = "btn btn-danger" })
            </td>
        </tr>
    }

</table>
