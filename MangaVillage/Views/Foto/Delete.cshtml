@model MangaVillage.Foto

@{
    ViewBag.Title = "Delete";
}

<div class="my-5 fst-italic">
    <h2>Elimina Foto</h2>
    <h3>Sei sicuro di volere eliminare questa foto?</h3>
</div>
<div>
    <dl class="dl-horizontal">
        <dt>
            @Html.DisplayNameFor(model => model.Nome)
        </dt>

        <dd class="mb-3">
            <img src="@Url.Content("~/Content/Foto/" + Model.Nome)" class="border" alt="@Model.Manga.Titolo" width="260" height="400" />
        </dd>

        <dt>
            @Html.DisplayNameFor(model => model.Manga.Titolo)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Manga.Titolo)
        </dd>
    </dl>

    @using (Html.BeginForm())
    {
        @Html.AntiForgeryToken()

        <div class="form-actions no-color mt-5">
            <input type="submit" value="Elimina" class="btn btn-danger me-2 fst-italic" />
            <a class="btn btn-wg fst-italic" href="@Url.Action("Index")">Lista Foto</a>
        </div>
    }
</div>
