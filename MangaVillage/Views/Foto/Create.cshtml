@model MangaVillage.Foto

@{
    ViewBag.Title = "Create";
}

<h2 class="my-5 fst-italic">Aggiungi Foto</h2>

@using (Html.BeginForm()) 
{
    @Html.AntiForgeryToken() 
    <div class="form-horizontal">
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        <div class="form-group mb-3">
            @Html.LabelFor(model => model.Nome, htmlAttributes: new { @class = "control-label col-md-2 fw-bold mb-1" })
            <div class="col-md-10">
                @Html.EditorFor(model => model.Nome, new { htmlAttributes = new { @class = "form-control", type = "file" } })
                @Html.ValidationMessageFor(model => model.Nome, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group mb-5">
            @Html.LabelFor(model => model.IDMangaFk, "Titolo Manga", htmlAttributes: new { @class = "control-label col-md-2 fw-bold mb-1" })
            <div class="col-md-10">
                @Html.DropDownList("IDMangaFk", null, htmlAttributes: new { @class = "form-control" })
                @Html.ValidationMessageFor(model => model.IDMangaFk, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Aggiungi" class="btn btn-success me-3" />
                <a class="btn btn-wg fst-italic" href="@Url.Action("Index")">Lista Foto</a>
            </div>
        </div>
    </div>
}
