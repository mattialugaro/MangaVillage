@model MangaVillage.Utente

@{
    ViewBag.Title = "Login";
}
@Html.Partial("_Notification")

<div class="mtx">
    <h2 class="text-center text-white display-3 fw-semibold bg-transparent mb-0">Accedi</h2>
    <p class="text-center text-white display-6 bg-transparent">
        Non sei ancora Registrato?
        <a class="text-decoration-none text-white fw-semibold " href="~/Utente/Registrazione">Registrati</a>
    </p>

    @using (Html.BeginForm())
    {
        @Html.AntiForgeryToken()
        <div class="form-horizontal text-center text-white">
            @Html.ValidationSummary(true, "", new { @class = "text-danger" })

            <div class="form-group mb-3">
                @Html.LabelFor(model => model.Username, htmlAttributes: new { @class = "control-label col-md-2 fw-bold" })
                <div class="col-md-12">
                    @Html.EditorFor(model => model.Username, new { htmlAttributes = new { @class = "form-control mx-auto text-center", @placeholder = "Inserisci il tuo username" } })
                    @Html.ValidationMessageFor(model => model.Username, "", new { @class = "text-danger bg-black" })
                </div>
            </div>

            <div class="form-group mb-3">
                @Html.LabelFor(model => model.Password, htmlAttributes: new { @class = "control-label col-md-2 fw-bold" })
                <div class="col-md-12">
                    <div class="position-relative">
                        @Html.EditorFor(model => model.Password, new { htmlAttributes = new { @class = "form-control mx-auto text-center d-inline", type = "password", id = "password", @placeholder = "Inserisci la tua password" } })
                        <button type="button" class="btn btn-success position-absolute bottom-0 ms-2" id="showPassword">Mostra</button>
                    </div>
                    @Html.ValidationMessageFor(model => model.Password, "", new { @class = "text-danger bg-black" })
                </div>
                <p class="bg-black d-inline bg-opacity-25">Non ti ricordi la password? <a class="text-white text-decoration-none fw-bold" href="#">Cambiala</a></p>
            </div>

            <div class="form-group mb-5">
                <div class="col-md-offset-2 col-md-12">
                    <input type="submit" value="Accedi" class="btn btn-success shadow" />
                </div>
            </div>
        </div>
    }
</div>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}