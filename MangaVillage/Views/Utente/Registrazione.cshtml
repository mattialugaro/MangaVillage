@model MangaVillage.Utente

@{
    ViewBag.Title = "Registrazione";
}

<div>
    <h2 class="text-center text-white display-3 fw-semibold shadow bg-transparent mb-3">Registrazione</h2>

    @using (Html.BeginForm())
    {
        @Html.AntiForgeryToken()
        <div class="form-horizontal text-center text-white">
            @Html.ValidationSummary(true, "", new { @class = "text-danger" })
            <div class="form-group mb-3">
                @Html.LabelFor(model => model.Nome, htmlAttributes: new { @class = "control-label col-md-2 fw-bold shadow" })
                <div class="col-md-12">
                    @Html.EditorFor(model => model.Nome, new { htmlAttributes = new { @class = "form-control mx-auto text-center", @placeholder = "Inserisci il tuo nome" } })
                    @Html.ValidationMessageFor(model => model.Nome, "", new { @class = "text-danger bg-black" })
                </div>
            </div>

            <div class="form-group mb-3">
                @Html.LabelFor(model => model.Cognome, htmlAttributes: new { @class = "control-label col-md-2 fw-bold" })
                <div class="col-md-12">
                    @Html.EditorFor(model => model.Cognome, new { htmlAttributes = new { @class = "form-control mx-auto text-center", @placeholder = "Inserisci il tuo cognome" } })
                    @Html.ValidationMessageFor(model => model.Cognome, "", new { @class = "text-danger bg-black" })
                </div>
            </div>

            <div class="form-group mb-3">
                @Html.LabelFor(model => model.DataNascita, htmlAttributes: new { @class = "control-label col-md-2 fw-bold" })
                <div class="col-md-12">
                    @Html.EditorFor(model => model.DataNascita, new { htmlAttributes = new { @class = "form-control mx-auto text - center", @type = "date" } })
                    @Html.ValidationMessageFor(model => model.DataNascita, "", new { @class = "text-danger bg-black" })
                </div>
            </div>

            <div class="form-group mb-3">
                @Html.LabelFor(model => model.Email, htmlAttributes: new { @class = "control-label col-md-2 fw-bold" })
                <div class="col-md-12">
                    @Html.EditorFor(model => model.Email, new { htmlAttributes = new { @class = "form-control mx-auto text-center", @type = "email", @placeholder = "Inserisci la tua email" } })
                    @Html.ValidationMessageFor(model => model.Email, "", new { @class = "text-danger bg-black" })
                </div>
            </div>

            <div class="form-group mb-3">
                @Html.LabelFor(model => model.Username, htmlAttributes: new { @class = "control-label col-md-2 fw-bold" })
                <div class="col-md-12">
                    @Html.EditorFor(model => model.Username, new { htmlAttributes = new { @class = "form-control mx-auto text-center", @placeholder = "Inserisci il tuo username" } })
                    @Html.ValidationMessageFor(model => model.Username, "", new { @class = "text-danger bg-black" })
                </div>
            </div>

            <div class="form-group mb-3">
                @Html.LabelFor(model => model.Password, htmlAttributes: new { @class = "control-label col-md-2 fw-bold" })
                <div class="col-md-12">
                    <div class="position-relative">
                        @Html.EditorFor(model => model.Password, new { htmlAttributes = new { @class = "form-control mx-auto text-center d-inline", type = "password", id = "password", @placeholder = "Inserisci la tua password" } })
                        <button type="button" class="btn btn-success position-absolute bottom-0 ms-2" id="showPassword">Mostra</button>
                    </div>
                    @Html.ValidationMessageFor(model => model.Password, "", new { @class = "text-danger bg-black" })
                </div>
            </div>

            <div class="form-group mb-3">
                <div class="col-md-offset-2 col-md-12">
                    <input type="submit" value="Registrati" class="btn btn-success" />
                </div>
            </div>
        </div>
    }

</div>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
