@model MangaVillage.Models.Recensione

@{
    ViewBag.Title = "Delete";
}
@Html.Partial("_Notification")

<div class="my-5 fst-italic">
    <h2>Elimina Recensione</h2>
    <h3>Sei sicuro di volere eliminare questa recensione?</h3>
</div>
<div>
    <dl class="dl-horizontal">
        <dt>
            @Html.DisplayNameFor(model => model.Manga.Titolo)
        </dt>

        <dd class="mb-3">
            @Html.DisplayFor(model => model.Manga.Titolo)
        </dd>

        <dt>
            @Html.DisplayNameFor(model => model.Utente.Username)
        </dt>

        <dd class="mb-3">
            @Html.DisplayFor(model => model.Utente.Username)
        </dd>

        <dt>
            @Html.DisplayNameFor(model => model.Voto)
        </dt>

        <dd class="mb-3">
            @Html.DisplayFor(model => model.Voto)
        </dd>

        <dt>
            @Html.DisplayNameFor(model => model.Descrizione)
        </dt>

        <dd class="mb-3">
            @Html.DisplayFor(model => model.Descrizione)
        </dd>
    </dl>

    @using (Html.BeginForm())
    {
        @Html.AntiForgeryToken()

        <div class="form-actions no-color mt-5">
            <input type="submit" value="Elimina" class="btn btn-danger me-2 fst-italic" />
            <a class="btn btn-wg fst-italic" href="@Url.Action("Index")">Lista Recensioni</a>
        </div>
    }
</div>
