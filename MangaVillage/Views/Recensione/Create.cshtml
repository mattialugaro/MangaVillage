@model MangaVillage.Models.Recensione

@{
    ViewBag.Title = "Create";
}

<h2 class="my-4">Aggiungi Recensione</h2>


@using (Html.BeginForm()) 
{
    @Html.AntiForgeryToken()
<div class="form-horizontal">
    @Html.ValidationSummary(true, "", new { @class = "text-danger" })
    <div class="form-group mb-3">
        @Html.LabelFor(model => model.Voto, htmlAttributes: new { @class = "control-label col-md-2" })
        <div class="col-md-10">
            @Html.EditorFor(model => model.Voto, new { htmlAttributes = new { @class = "form-control", type = "number", min = 1, max = 10 } })
            @Html.ValidationMessageFor(model => model.Voto, "", new { @class = "text-danger" })
        </div>
    </div>

    <div class="form-group mb-3">
        @Html.LabelFor(model => model.Descrizione, htmlAttributes: new { @class = "control-label col-md-2" })
        <div class="col-md-10">
            @Html.EditorFor(model => model.Descrizione, new { htmlAttributes = new { @class = "form-control" } })
            @Html.ValidationMessageFor(model => model.Descrizione, "", new { @class = "text-danger" })
        </div>
    </div>

    <div class="form-group mb-3">
        @Html.LabelFor(model => model.IDMangaFk, htmlAttributes: new { @class = "control-label col-md-2" })
        <div class="col-md-10">
            @Html.DropDownList("IDMangaFk", null, htmlAttributes: new { @class = "form-control" })
            @Html.ValidationMessageFor(model => model.IDMangaFk, "", new { @class = "text-danger" })
        </div>
    </div>

    <div class="form-group mb-3">
        @Html.LabelFor(model => model.IDUtenteFk, htmlAttributes: new { @class = "control-label col-md-2" })
        <div class="col-md-10">
            @Html.DropDownList("IDUtenteFk", null, htmlAttributes: new { @class = "form-control" })
            @Html.ValidationMessageFor(model => model.IDUtenteFk, "", new { @class = "text-danger" })
        </div>
    </div>

    <div class="form-group">
        <div class="col-md-offset-2 col-md-10 d-flex">
            <input type="submit" value="Aggiungi" class="btn btn-success me-3" />
            <a class="btn btn-wg" href="@Url.Action("Index")">Lista Recensioni</a>
        </div>
    </div>
</div>
}

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
