@model IEnumerable<MangaVillage.Manga>

<h2>Ricerca Manga</h2>

<form action="@Url.Action("Ricerca")" method="post">
    <p>
        <label for="titolo">Titolo:</label>
        <input type="text" id="titolo" name="titolo" />
    </p>
    <p>
        <label for="autore">Autore:</label>
        <input type="text" id="autore" name="autore" />
    </p>
    <p>
        <label for="annoUscita">Anno di uscita:</label>
        <input type="number" id="annoUscita" name="annoUscita" />
    </p>
    <p>
        <label for="nazionalita">Nazionalità:</label>
        <input type="text" id="nazionalita" name="nazionalita" />
    </p>
    <p>
        <label for="statoPubblicazione">Stato di pubblicazione:</label>
        <input type="text" id="statoPubblicazione" name="statoPubblicazione" />
    </p>
    <p>
        <input type="submit" value="Ricerca" />
    </p>
</form>

<div>
    @Html.ActionLink("Torna alla Biblioteca", "Biblioteca")
</div>

@if (Model != null && Model.Any())
{
    <div class="container">
        <div class="row">
            @foreach (var manga in Model)
            {
                <div class="col-12 col-sm-6 col-md-4 col-xxl-3">
                    <div class="card mb-3">
                        <img src="@Url.Content("~/Content/Img/" + @manga.Copertina)" class="card-img-top position-relative" width="200px" height="440px" alt="@manga.Titolo">
                        <div class="card-body">
                            <div class="d-flex justify-content-between align-items-center mb-3">
                                <h5 class="card-title mb-0 me-2">@manga.Titolo</h5>
                                <p class="card-text text-truncate mb-0">@manga.Autore</p>
                            </div>
                            <p class="card-text position-absolute top-0 start-50 translate-middle badge rounded-pill bg-danger border">@manga.AnnoUscita</p>
                            <div class="d-flex justify-content-between align-items-center mb-3">
                                <p class="card-text mb-0">@manga.Nazionalita</p>
                                <p class="card-text mb-0">@manga.StatoPubblicazione</p>
                            </div>
                            <p class="card-text text-truncate">@manga.Trama</p>
                            <div class="text-center">
                                <a href="@Url.Action("Details", "Manga", new { id = @manga.ID })" class="btn btn-primary">Dettagli</a>
                            </div>
                        </div>
                    </div>
                </div>
            }
        </div>
    </div>
}
else
{
    <p>Nessun manga trovato.</p>
}

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
