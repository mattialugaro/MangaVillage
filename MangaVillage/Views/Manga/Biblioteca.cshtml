@model IEnumerable<MangaVillage.Manga>

@{
    ViewBag.Title = "Biblioteca";
}

<div class="d-flex justify-content-between align-items-center my-5">
    <h2 class="text-center mb-3">Biblioteca</h2>
    <div class="dropdown">
        <button class="btn btn-primary dropdown-toggle" type="button" id="sortDropdownMenu" data-bs-toggle="dropdown" aria-expanded="false">
            Seleziona Ordine
        </button>
        <ul class="dropdown-menu" aria-labelledby="sortDropdownMenu">
            <li><a class="dropdown-item" href="@Url.Action("Biblioteca", new { sortOrder = "Titolo" })">Titolo <i class="bi bi-sort-alpha-down fs-5"></i></a></li>
            <li><a class="dropdown-item" href="@Url.Action("Biblioteca", new { sortOrder = "TitoloDesc" })">Titolo Discendente <i class="bi bi-sort-alpha-up fs-5"></i></a></li>
            <li><a class="dropdown-item" href="@Url.Action("Biblioteca", new { sortOrder = "Anno" })">Anno <i class="bi bi-sort-numeric-down fs-5"></i></a></li>
            <li><a class="dropdown-item" href="@Url.Action("Biblioteca", new { sortOrder = "AnnoDesc" })">Anno Discendente <i class="bi bi-sort-numeric-up fs-5"></i></a></li>
            <li><a class="dropdown-item" href="@Url.Action("Biblioteca", new { sortOrder = "InCorso" })">In corso <i class="bi bi-hourglass-split fs-5"></i></a></li>
            <li><a class="dropdown-item" href="@Url.Action("Biblioteca", new { sortOrder = "Completato" })">Completato <i class="bi bi-check-circle fs-5"></i></a></li>
        </ul>
        <a href="@Url.Action("Ricerca", "Manga")" class="btn btn-primary"><i class="bi bi-search"></i></a>
    </div>
</div>

<div class="container">
    <div class="row">
        @foreach (var item in Model)
        {
            <div class="col-12 col-sm-6 col-md-4 col-xxl-3">
                <div class="card mb-3 postit">
                    <img src="@Url.Content("~/Content/Img/" + item.Copertina)" class="card-img-top rounded-2 position-relative" width="200px" height="440px" alt="@item.Titolo">
                    <p class="card-text position-absolute top-0 start-50 translate-middle badge rounded-pill bg-danger border">@item.AnnoUscita</p>
                    <div class="text-center">
                        <a href="@Url.Action("Details", "Manga", new { id = item.ID })" class="btn btn-primary position-absolute bottom-0 start-50 translate-middle badge rounded-pill border">@item.Titolo - Dettagli</a>
                    </div>
                </div>
            </div>
        }
    </div>
</div>


