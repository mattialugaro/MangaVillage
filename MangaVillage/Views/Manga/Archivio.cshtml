@model IEnumerable<MangaVillage.Manga>

@{
    ViewBag.Title = "Archivio";
}
@Html.Partial("_Notification")

<div class="d-flex justify-content-between align-items-center my-5">
    <h2 class="text-center mb-0 text-white shadow fst-italic">Archivio</h2>
    <div class="dropdown">
        <button class="btn btn-success dropdown-toggle" type="button" id="sortDropdownMenu" data-bs-toggle="dropdown" aria-expanded="false">
            Seleziona Ordine
        </button>
        <ul class="dropdown-menu" aria-labelledby="sortDropdownMenu">
            <li><a class="dropdown-item" href="@Url.Action("Archivio", new { sortOrder = "Titolo" })">Titolo <i class="bi bi-sort-alpha-down fs-5"></i></a></li>
            <li><a class="dropdown-item" href="@Url.Action("Archivio", new { sortOrder = "TitoloDesc" })">Titolo Decrescente <i class="bi bi-sort-alpha-up fs-5"></i></a></li>
            <li><a class="dropdown-item" href="@Url.Action("Archivio", new { sortOrder = "Anno" })">Anno <i class="bi bi-sort-numeric-down fs-5"></i></a></li>
            <li><a class="dropdown-item" href="@Url.Action("Archivio", new { sortOrder = "AnnoDesc" })">Anno Decrescente <i class="bi bi-sort-numeric-up fs-5"></i></a></li>
            <li><a class="dropdown-item" href="@Url.Action("Archivio", new { sortOrder = "Prezzo" })">Prezzo <i class="bi bi-arrow-down fs-5"></i><i class="bi bi-currency-euro fs-5"></i></a></li>
            <li><a class="dropdown-item" href="@Url.Action("Archivio", new { sortOrder = "PrezzoDesc" })">Prezzo Decrescente <i class="bi bi-arrow-up fs-5"></i><i class="bi bi-currency-euro fs-5"></i></i></a></li>
            <li><a class="dropdown-item" href="@Url.Action("Archivio", new { sortOrder = "InCorso" })">In corso <i class="bi bi-hourglass-split fs-5"></i></a></li>
            <li><a class="dropdown-item" href="@Url.Action("Archivio", new { sortOrder = "Completato" })">Completato <i class="bi bi-check-circle fs-5"></i></a></li>
        </ul>
        <a href="@Url.Action("Ricerca", "Manga")" class="btn btn-success"><i class="bi bi-search"></i></a>
    </div>
</div>

<div class="container">
    <div class="row">
        @foreach (var item in Model)
        {
            <div class="col-12 col-sm-6 col-md-4 col-xxl-3">
                <div class="card mb-3 postit">
                    <img src="@Url.Content("~/Content/Img/" + item.Copertina)" class="card-img-top rounded-2 position-relative" width="200" height="440" alt="@item.Titolo">
                    <p class="card-text position-absolute top-0 start-50 translate-middle badge rounded-pill border bg-light text-black">@item.AnnoUscita</p>
                    <div class="text-center">
                        <a href="@Url.Action("Details", "Manga", new { id = item.ID })" class="btn btn-success position-absolute bottom-0 start-50 translate-middle badge rounded-pill border fs-5">@item.Titolo - Dettagli</a>
                    </div>
                </div>
            </div>
        }
    </div>
</div>