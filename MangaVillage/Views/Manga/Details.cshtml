@model MangaVillage.Manga
@using MangaVillage.Models


@{
    ViewBag.Title = "Details";
}

<div class="d-flex justify-content-between align-items-center my-4">
    <h2>Dettagli</h2>
    <div>
        <a href="@Url.Action("Archivio")" class="btn btn-wg">
            Archivio <i class="bi bi-book fs-5"></i>
        </a>
        <a href="@Url.Action("Ricerca", "Manga")" class="btn btn-success">
            <i class="bi bi-search fs-5"></i>
        </a>
    </div>
</div>

<hr />
<div class="container">
    <dl class="dl-horizontal">
        <div class="row">
            <div class="col-4">
                <dt class="mb-2">
                    @Html.DisplayNameFor(model => model.Copertina)
                </dt>

                <dd>
                    <img src="@Url.Content("~/Content/Img/" + Model.Copertina)" class="border" alt="model.Titolo" width="400" height="600" />
                </dd>
            </div>
            <div class="col-8">
                <dt>
                    @Html.DisplayNameFor(model => model.Titolo)
                </dt>
                <dd class="mb-3">
                    @Html.DisplayFor(model => model.Titolo)
                </dd>

                <dt>
                    @Html.DisplayNameFor(model => model.Autore)
                </dt>

                <dd class="mb-3">
                    @Html.DisplayFor(model => model.Autore)
                </dd>

                <dt>
                    @Html.DisplayNameFor(model => model.AnnoUscita)
                </dt>

                <dd class="mb-3">
                    @Html.DisplayFor(model => model.AnnoUscita)
                </dd>

                <dt>
                    @Html.DisplayNameFor(model => model.CategoriaString)
                </dt>

                <dd class="mb-3">
                    @Html.DisplayFor(model => model.CategoriaString)
                </dd>

                <dt>
                    @Html.DisplayNameFor(model => model.GenereString)
                </dt>

                <dd class="mb-3">
                    @Html.DisplayFor(model => model.GenereString)
                </dd>

                <dt>
                    @Html.DisplayNameFor(model => model.Nazionalita)
                </dt>

                <dd class="mb-3">
                    @Html.DisplayFor(model => model.Nazionalita)
                </dd>

                <dt>
                    @Html.DisplayNameFor(model => model.StatoPubblicazione)
                </dt>

                <dd class="mb-3">
                    @Html.DisplayFor(model => model.StatoPubblicazione)
                </dd>
                <dt>
                    @Html.DisplayNameFor(model => model.Trama)
                </dt>

                <dd>
                    @Html.DisplayFor(model => model.Trama)
                </dd>
            </div>
        </div>
    </dl>
</div>

@if (!User.Identity.IsAuthenticated)
{
    <p class="text-center display-6 mt-5">
        <a class="text-decoration-none fw-semibold" href="~/Utente/Login">Accedi</a> per lasciare una recensione
    </p>
}
else
{
    <div class="container">
        <div class="row">
            <div class="col-6">
                <h4>Aggiungi Recensione:</h4>
                <form action="@Url.Action("Aggiungi", "Recensione")" method="post">
                    <p>
                        <label for="voto">Voto:</label>
                        <input type="number" min="1" max="10" id="voto" name="voto" />
                    </p>
                    <p>
                        <label for="descrizione">Descrizione:</label>
                        <input type="text" id="descrizione" name="descrizione" />
                    </p>
                    <p>
                        <input type="submit" value="Aggiungi" />
                    </p>
                </form>
            </div>
            @if (ViewBag.Recensioni != null && ViewBag.Recensioni.Count > 0)
            {
                foreach (var recensione in (List<Recensione>)ViewBag.Recensioni)
                {
                    <div class="col-6">
                        <div>
                            <p>Autore: @recensione.Utente.Username<img src="@Url.Content("~/Content/Avatar/" + recensione.Utente.Avatar)" class="border rounded-circle" alt="Avatar utente" width="100px" height="100px" style="object-fit: cover" /></p>
                            <p>Voto: @recensione.Voto</p>
                            <p>Descrizione: @recensione.Descrizione</p>
                        </div>
                    </div>
                }
            }
            else
            {
                <p>Nessuna recensione disponibile per questo manga.</p>
            }

        </div>
    </div>
}