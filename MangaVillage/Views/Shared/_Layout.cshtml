<!DOCTYPE html>
<html>
<head>
    <meta http-equiv="Content-Type" content="text/html; charset=utf-8" />
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width" />
    <title>@ViewBag.Title - Applicazione ASP.NET</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-QWTKZyjpPEjISv5WaRU9OFeRpok6YctnYmDr5pNlyT2bRjXh0JMhjY6hW+ALEwIH" crossorigin="anonymous">
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.3/font/bootstrap-icons.min.css">
    <link rel="stylesheet" href="~/Content/Site.css" asp-append-version="true" />
    @Styles.Render("~/Content/css")
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/toastr.js/latest/css/toastr.min.css">
    @Scripts.Render("~/bundles/modernizr")
</head>

<body class="@ViewBag.Sfondo">
    <nav class="navbar navbar-expand-sm navbar-toggleable-sm navbar-dark bg-dark opacity">
        <div class="container">
            @Html.ActionLink("Manga Village", "Index", "Home", new { area = "" }, new { @class = "navbar-brand" })
            <button type="button" class="navbar-toggler" data-bs-toggle="collapse" data-bs-target=".navbar-collapse" title="Attiva/Disattiva spostamento" aria-controls="navbarSupportedContent"
                    aria-expanded="false" aria-label="Toggle navigation">
                <span class="navbar-toggler-icon"></span>
            </button>
            <div class="collapse navbar-collapse d-sm-inline-flex justify-content-between">
                <ul class="navbar-nav flex-grow-1">
                    <li>@Html.ActionLink("Home", "Index", "Home", new { area = "" }, new { @class = "nav-link" })</li>
                    @if (User.IsInRole("Admin"))
                    {
                        <li>@Html.ActionLink("Lista Utenti", "Index", "Utente", new { area = "" }, new { @class = "nav-link" })</li>
                        <li>@Html.ActionLink("Lista Categorie", "Index", "Categoria", new { area = "" }, new { @class = "nav-link" })</li>
                        <li>@Html.ActionLink("Lista Generi", "Index", "Genere", new { area = "" }, new { @class = "nav-link" })</li>
                        <li>@Html.ActionLink("Lista Manga", "Index", "Manga", new { area = "" }, new { @class = "nav-link" })</li>
                        <li>@Html.ActionLink("Archivio", "Archivio", "Manga", new { area = "" }, new { @class = "nav-link" })</li>
                        <li>@Html.ActionLink("Recensioni", "Index", "Recensione", new { area = "" }, new { @class = "nav-link" })</li>
                        <li>@Html.ActionLink("Ordini", "Index", "Ordine", new { area = "" }, new { @class = "nav-link" })</li>
                        <li>@Html.ActionLink("Dettaglio Ordini", "Index", "DettaglioOrdine", new { area = "" }, new { @class = "nav-link" })</li>
                    }
                    else
                    {
                        <li>@Html.ActionLink("Archivio", "Archivio", "Manga", new { area = "" }, new { @class = "nav-link ms-auto" })</li>
                    }
                    @if (!User.Identity.IsAuthenticated)
                    {
                        <li class="ms-auto">@Html.ActionLink("Accedi", "Login", "Utente", new { area = "" }, new { @class = "nav-link" })</li>
                    }
                    else
                    {
                        <li class="nav-link dropdown ms-auto">
                            <a class="dropdown-toggle text-decoration-none text-white" href="#" id="navbarDropdown" role="button" data-bs-toggle="dropdown" aria-expanded="false">
                                Benvenuto @User.Identity.Name
                            </a>
                            <ul class="dropdown-menu" aria-labelledby="navbarDropdown">
                                <li>@Html.ActionLink("Profilo", "Edit", "Utente", new { id = Request.Cookies["ID"].Value }, new { @class = "nav-link text-black" })</li>
                                <li>@Html.ActionLink("Logout", "Logout", "Utente", new { area = "" }, new { @class = "nav-link text-black" })</li>
                            </ul>
                        </li>
                        if (Request.Cookies["Avatar"] != null)
                        {
                            var valoreCookie = Request.Cookies["Avatar"].Value;
                            <li><img src="@Url.Content("~/Content/Avatar/" + @valoreCookie)" width="40" height="40" class="rounded-circle nav-link cover" alt="Avatar utente" /></li>
                        }
                        else
                        {
                            <li><img src="@Url.Content("~/Content/Avatar/default.jpeg")" width="40" height="40" class="rounded-circle nav-link cover" alt="Avatar utente" /></li>
                        }
                    }
                </ul>
            </div>
        </div>
    </nav>
    <div class="container body-content">
        @RenderBody()
        <footer class="text-white mt-3">
            <p>&copy; @DateTime.Now.Year - Manga Village ASP.NET</p>
        </footer>
    </div>

    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    @RenderSection("scripts", required: false)

    <section id="scripts">
        <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js" integrity="sha384-YvpcrYf0tY3lHB60NNkmXc5s9fDVZLESaAA55NDzOxhy9GkcIdslK1eN7N6jIeHz" crossorigin="anonymous"></script>
        <script src="~/Scripts/frasiAlternate.js"></script>
        <script src="~/Scripts/chatAlternate.js"></script>
        <script src="~/Scripts/vediPassword.js"></script>
    </section>
</body>
</html>
